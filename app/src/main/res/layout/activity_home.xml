<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corol00bfff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/db_48"
            android:layout_height="@dimen/db_48"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:text="@string/Title"
            android:textColor="@color/coror797963"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/btnNewNote"
            android:layout_width="@dimen/db_48"
            android:layout_height="@dimen/db_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/db_16"
            android:background="@drawable/ic_action_new" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlMain"
        android:padding="@dimen/db_16" />

</RelativeLayout>