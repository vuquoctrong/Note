<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/db_150"
    android:layout_height="@dimen/db_150"
    android:padding="@dimen/dn_8">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/db_16"
                android:text="Title"
                android:textSize="@dimen/textSize" />

            <ImageView
                android:id="@+id/ivAlarms"
                android:layout_width="@dimen/db_16"
                android:layout_height="@dimen/db_16"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_alarms_select" />

            <TextView
                android:id="@+id/tvOne"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="@dimen/dn_8"
                android:background="@color/btncolorblue" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOne"
                android:layout_marginLeft="@dimen/db_16"
                android:layout_marginTop="@dimen/dn_8"
                android:text="aaaaaaa"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="aaaaaaaaaaa"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>